{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "html_analyzer": {
          "tokenizer": "keyword",
          "char_filter": [
            "html_strip"
          ]
        },
        "custom_lowercase_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "my_ascii_folding"
          ]
        }
      },
      "filter": {
        "my_ascii_folding": {
          "type": "asciifolding",
          "preserve_original": true
        }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "properties": {
      "assetId": {
        "type": "keyword"
      },
      "name": {
        "type": "keyword",
        "copy_to": "contentAll"
      },
      "content": {
        "type": "text"
      },
      "contentHtml": {
        "type": "text"
      },
      "contentAll": {
        "type": "text",
        "store": true,
        "analyzer": "custom_lowercase_analyzer"
      },
      "application": {
        "type": "keyword"
      },
      "resourceType": {
        "type": "keyword"
      },
      "folderIds": {
        "type": "keyword"
      },
      "usersForFolderIds": {
        "type": "keyword"
      },
      "rights": {
        "type": "keyword"
      },
      "creatorId": {
        "type": "keyword"
      },
      "creatorName": {
        "type": "keyword",
        "copy_to": "contentAll"
      },
      "createdAt": {
        "type": "date"
      },
      "updatedAt": {
        "type": "date"
      },
      "public": {
        "type": "boolean"
      },
      "trashed": {
        "type": "boolean"
      },
      "trashedBy": {
        "type": "keyword"
      },
      "favoriteFor": {
        "type": "keyword"
      },
      "shared": {
        "type": "object",
        "enabled": false
      },
      "version": {
        "type": "long"
      },
      "subresources": {
        "properties": {
          "id": {
            "type": "keyword"
          },
          "content": {
            "type": "text"
          },
          "contentHtml": {
            "type": "text"
          },
          "deleted": {
            "type": "boolean"
          },
          "version": {
            "type": "long"
          }
        }
      }
    }
  }
}