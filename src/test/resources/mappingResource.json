{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "html_analyzer": {
          "tokenizer": "keyword",
          "char_filter": [
            "html_strip"
          ]
        }
      }
    }
  },
  "mappings": {
    "_routing": {
      "required": true
    },
    "dynamic": false,
    "properties": {
      "name": {
        "type": "text"
      },
      "content": {
        "type": "text"
      },
      "application": {
        "type": "keyword"
      },
      "resourceType": {
        "type": "keyword"
      },
      "folderIds": {
        "type": "keyword"
      },
      "usersForFolderIds": {
        "type": "keyword"
      },
      "visibleBy": {
        "type": "keyword"
      },
      "creatorId": {
        "type": "keyword"
      },
      "creatorName": {
        "type": "text"
      },
      "createdAt": {
        "type": "date"
      },
      "updatedAt": {
        "type": "date"
      },
      "public": {
        "type": "boolean"
      },
      "trashed": {
        "type": "boolean"
      },
      "favoriteFor": {
        "type": "keyword"
      }
    }
  }
}